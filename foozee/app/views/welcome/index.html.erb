<h1>Welcome Foozee</h1>
<%if current_user%>

  <div class="container">
    <%if session[:email]%>
      <div class="user_home">
        <p>Welcome <%=session[:email]%></p>
        <p>Photobucket:</p>

        <%@photos.each do |photo|%>
          <%= erb :_new_photos, layout: false, locals: {photo: photo} %>
        <%end%>
      </div>

      <h1>Add a photo</h1>

      <form id="add-photo" method="post" action='/photo/<%= @user.id %>'>
        <label class="label" for="title">Title</label>
        <input type="text" name="title" placeholder="Photo Title">
        <input type="text" name="url" placeholder="URL">
        <div class="submit"><input type="submit" value="Add Photo"></div>
        <br>
      </form>

    <%end%>
  </div>

<%else%>
  <div class="container">
    <div class="home">
      <p>Welcome</p>
    </div>
  </div>
<%end%>
